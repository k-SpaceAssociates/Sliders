<Window x:Class="SliderLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:SliderLauncher"
        xmlns:sliders="clr-namespace:Sliders;assembly=Sliders"
        mc:Ignorable="d"
        Title="SliderLauncher" Height="700" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Connection Panel -->
            <RowDefinition Height="*"/>
            <!-- SliderControl -->
        </Grid.RowDefinitions>

        <!-- Refactored Connection Settings -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Add this -->
            </Grid.ColumnDefinitions>

            <!-- Connection Settings -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10" Orientation="Horizontal">
                <TextBlock Text="IP Address:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center" ToolTip="Text command connection needs an ethernet IPAddress and port."/>
                <TextBox x:Name="IPAddressTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" ToolTip="Enter the IPAddress here before attempting to connect.">
                    <TextBox.Text>
                        <Binding Path="IpAddress" Mode="TwoWay" UpdateSourceTrigger="LostFocus">
                            <Binding.ValidationRules>
                                <local:IpAddressOrHostValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <!-- Port -->
                <TextBlock Text="Port:" Grid.Row="1" Grid.Column="0" Margin="10,0,10,5" VerticalAlignment="Center" ToolTip="Text command connection needs an ethernet IPAddress and port."/>
                <TextBox x:Name="PortTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" ToolTip="Enter the port here before attempting to connect.">
                    <TextBox.Text>
                        <Binding Path="Port" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <local:PortValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <!-- Connect Button -->
                <Button Content="Connect" ToolTip="After entering to correct IPAdress and Port, press this to connect before sending commands."
                 Command="{Binding ConnectCommand}" 
                 Grid.Row="3"
                 Grid.Column="1"
                 HorizontalAlignment="Left"
                 Margin="10,0,0,5"/>

            </StackPanel>

            <TextBox Text="{Binding Output}" Grid.Row="2" Grid.Column="0" Margin="60,0,0,5" AcceptsReturn="True" TextWrapping="Wrap"/>

            <CheckBox Grid.Row="3" Grid.Column="2" 
          Content="Launch" 
          IsChecked="{Binding AutoLaunch, Mode=TwoWay}" 
          Margin="0,5,0,0"/>
        </Grid>

        <!-- SliderControl -->
        <Grid Grid.Row="1">
            <sliders:SliderControl x:Name="sliderControl"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" Margin="0,-10,0,0"/>
        </Grid>
    </Grid>
</Window>