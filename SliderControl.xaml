<UserControl x:Class="Sliders.SliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="350" Width="800">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- Top canvas (vertical indicator for top slider) -->
            <RowDefinition Height="Auto"/>
            <!-- Top horizontal slider -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom horizontal slider -->
            <RowDefinition Height="100"/>
            <!-- Bottom canvas (vertical indicator for bottom slider) -->
        </Grid.RowDefinitions>

        <!-- Top Canvas: Vertical Slider 1 -->
        <Canvas Grid.Row="0" Background="Transparent" Height="100">
            <Slider Orientation="Vertical"
            Minimum="{Binding VerticalSliderMinimum}"
            Maximum="{Binding VerticalSliderMaximum}"
            IsDirectionReversed="True"
            Height="80"
            Width="40"
            Canvas.Top="10"
            Canvas.Left="{Binding VerticalSliderLeft1}"
            Foreground="Blue">
                <Slider.Template>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Track x:Name="PART_Track"
                           IsDirectionReversed="True"
                           Orientation="Vertical"
                           Minimum="{TemplateBinding Minimum}"
                           Maximum="{TemplateBinding Maximum}"
                           Value="{TemplateBinding Value}">
                            <Track.Thumb>
                                <Thumb Width="40" Height="40">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Image Source="Images/Nidec.png"
                                               Stretch="Uniform"
                                               RenderTransformOrigin="0.5,0.5">
                                                    <Image.RenderTransform>
                                                        <RotateTransform Angle="180"/>
                                                    </Image.RenderTransform>
                                            </Image>
                                            </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
                </Slider.Template>
            </Slider>
        </Canvas>

        <!-- Top Horizontal Slider -->
        <Slider Grid.Row="1"
        Minimum="{Binding SliderMinimum}"
        Maximum="{Binding SliderMaximum}"
        Value="{Binding SliderValue, Mode=OneWay}"
        Height="1"
        Margin="20,10"
        Foreground="Blue"/>

        <!-- Bottom Horizontal Slider -->
        <Slider Grid.Row="2"
        Minimum="{Binding SliderMinimum}"
        Maximum="{Binding SliderMaximum}"
        Value="{Binding FollowerSliderValue, Mode=OneWay}"
        Height="1"
        Margin="20,10"
        Foreground="Green"/>

        <!-- Bottom Canvas: Vertical Slider 2 -->
        <Canvas Grid.Row="3" Background="Transparent" Height="100">
            <Slider Orientation="Vertical"
            Minimum="{Binding VerticalSliderMinimum}"
            Maximum="{Binding VerticalSliderMaximum}"
            Height="80"
            Width="40"
            Canvas.Top="10"
            Canvas.Left="{Binding VerticalSliderLeft2}"
            Foreground="Green">
                <Slider.Template>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Track x:Name="PART_Track"
                           IsDirectionReversed="True"
                           Orientation="Vertical"
                           Minimum="{TemplateBinding Minimum}"
                           Maximum="{TemplateBinding Maximum}"
                           Value="{TemplateBinding Value}">
                            <Track.Thumb>
                                <Thumb Width="40" Height="40">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Image Source="Images/Nidec.png"
                                               Stretch="Uniform"
                                               RenderTransformOrigin="0.5,0.5"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
                </Slider.Template>
            </Slider>
        </Canvas>
    </Grid>
</UserControl>